<div class = "container">

  {{#each comments}}
<h1>{{title}}</h1>
<p>{{post}}</p>
<p>{{comment}}</p>
{{/each}}


<div class="row">
  <form action="/comments" method="post" class="col s12">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input id="title" class="materialize-textarea"
          type="text" class="validate" name="comment"
          >
          <label for="title">Comments</label>
        </div>
      </div>
      <div class="container center-align">
          <button class="btn waves-effect waves-light commentButton" type="submit" name="action" value="submit">Submit
          </button>
      </div>
    </form>
</div>
